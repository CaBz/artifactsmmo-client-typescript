// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model pending_tasks {
  id           Int       @id @default(autoincrement())
  character    String
  name         String
  creationDate DateTime? @default(now())
}
