generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model effects {
  code        String @id
  name        String
  description String
  type        String
  subtype     String
  data        Json
}

model events {
  code         String @id
  name         String
  maps         Json
  skin         String
  duration     Int
  rate         Int
  content_type String
  content_code String
  data         Json
}

model active_events {
  code             String   @id
  name             String
  map_name         String
  map_skin         String
  map_x            Int
  map_y            Int
  map_content_type String
  map_content_code String
  previous_skin    String
  duration         Int
  expiration       DateTime
  created_at       DateTime
  data             Json
}

model items {
  code           String  @id
  name           String
  level          Int
  type           String
  subtype        String
  description    String
  craft_skill    String?
  craft_level    Int?
  craft_quantity Int?
  tradeable      Boolean
  data           Json
}

model item_effects {
  item_code    String
  effect_code  String
  effect_value Int

  @@id([item_code, effect_code])
}

model recipes {
  code          String
  item_code     String
  item_quantity Int

  @@id([code, item_code])
}

model maps {
  name         String
  skin         String
  x            Int
  y            Int
  content_type String?
  content_code String?
  data         Json

  @@id([x, y])
}

model monsters {
  code            String @id
  name            String
  level           Int
  hp              Int
  attack_fire     Int
  attack_earth    Int
  attack_water    Int
  attack_air      Int
  res_fire        Int
  res_earth       Int
  res_water       Int
  res_air         Int
  critical_strike Int
  min_gold        Int
  max_gold        Int
  data            Json
}

model monster_effects {
  monster_code String
  effect_code  String
  effect_value Int

  @@id([monster_code, effect_code])
}

model monster_drops {
  monster_code String
  item_code    String
  rate         Int
  min_quantity Int
  max_quantity Int

  @@id([monster_code, item_code])
}

model npcs {
  code        String @id
  name        String
  description String
  type        String
  data        Json
}

model npc_items {
  npc_code   String
  item_code  String
  buy_price  Int
  sell_price Int

  @@id([npc_code, item_code])
}

model resources {
  code  String @id
  name  String
  skill String
  level Int
  data  Json
}

model resource_drops {
  resource_code String
  item_code     String
  rate          Int
  min_quantity  Int
  max_quantity  Int

  @@id([resource_code, item_code])
}

model tasks {
  code         String  @id
  level        Int
  type         String
  min_quantity Int
  max_quantity Int
  skill        String?
  reward_coins Int
  reward_golds Int
  data         Json
}

model task_rewards {
  code         String @id
  rate         Int
  min_quantity Int
  max_quantity Int
  data         Json
}

model pending_tasks {
  id                Int      @id @default(autoincrement())
  character         String
  name              String
  is_immediate      Boolean
  is_refresh_events Boolean
  is_in_progress    Boolean
  creation_date     DateTime @default(now())
}

model character_tasks {
  character String @id
  task      String
}
